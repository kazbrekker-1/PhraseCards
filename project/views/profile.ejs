<% include partials/header %>
  <div class="row profile">
    <div class="medium-8 large-centered columns">

      <div class="small-12 medium-4 large-4 columns">
        <img src= <%= avatar %> />
      </div>

      <div class="small-12 medium-8 large-8 columns">

        <h2><%= user.local.nickname %> <span class="subheader right">You have won: <span class="win_number">4</span> games</span></h2>
        <hr>

        <div class="row">
          <div class="small-12 medium-12 large-12 columns">
            <a href="/lobby" class="button button-large expand"> Find a Game </a>
          </div>
        </div>

        <div class="row">
          <div class="small-12 medium-12 large-12 columns friends">
            <h2>Your Friends</h2>
                  <% for (i = 0; i < friendAvatars.length; i++) { %>
                      <div class="small-6 medium-6 large-3 columns left">
                      <p><%= friends[i].local.nickname %></p>
                      <a href=<%="profile/" + friends[i]._id %>><img src= <%= friendAvatars[i] %> /><a>
                      </div>
                  <% } %>
          </div>

          <div class="small-12 medium-12 large-12 columns search">
            <h2>Find Friends</h2>
            <form action="/search" method="get">
              <div class="form-group">
                <input type="text" class="form-control friend-filter" name="name_string">
              </div>
            </form>
            <div class="small-12 medium-12 large-12 ">
              <ul id="friend">
                <% for (i = 0; i < searchUsers.length; i++) { %>
                  <ul class="potential_friend">
                    <p><%= searchUsers[i].local.nickname %></p>
                    <img src= <%= searchUserAvatars[i] %>/  style="width:10%"><a href=<%="profile/" + searchUsers[i]._id %>></a>

                  <% var isFriend = false; %>
                  <% for (j = 0; j < user.local.contacts.length; j++) { %>
                    

                    <% if(user.local.contacts[j].contact_id.toString() === searchUsers[i]._id.toString()){ isFriend = true%>
                        <% } %>
                  <% } %>

                  <% if(!isFriend){ %>
                    <form action=<%= "/connect/"+searchUsers[i]._id %> method="post">
                    <button type="submit" class="button button-large button-success right">Add Contact</button>
                  </form>
                  <% } %>
                  </ul>
                <% } %>
              </ul>
            </div>
          </div> 
        </div>
      </div>
    </div>
  </div>

<% include partials/footer %>